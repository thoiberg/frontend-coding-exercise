{
    "parser": "babel-eslint",
    "extends": "standard",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "standard",
        "promise"
    ],
    "env": {
        "mocha": true
    },
    "globals": {
        "expect": false,
        "sinon": false
    },
    "rules": {
        "eol-last": 0,
        "padded-blocks": 0,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/self-closing-comp": 1,
        "space-before-function-paren": 0,
        "semi": [2, "never"],
        "space-before-blocks": 1,
        "space-in-parens": [1, "never"]
    }
}